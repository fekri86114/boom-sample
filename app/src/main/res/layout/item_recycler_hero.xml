<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_buy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_8x"
    android:layout_marginTop="@dimen/space_4x"
    android:layout_marginBottom="@dimen/space_4x"
    android:layout_marginEnd="@dimen/space_8x"
    app:cardCornerRadius="@dimen/space_8x"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_custom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_8x">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/space_8x"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_img_cover_recyclerHero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_launcher_background" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt_nameHero_recyclerHero"
            style="@style/CoinBitText.Body.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8x"
            app:layout_constraintStart_toEndOf="@+id/materialCardView"
            app:layout_constraintTop_toTopOf="@+id/materialCardView"
            tools:text="Hero Name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt_fullName_recyclerHero"
            style="@style/CoinBitText.BodyAlternate.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8x"
            android:layout_marginTop="@dimen/space_4x"
            app:layout_constraintStart_toEndOf="@+id/materialCardView"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_nameHero_recyclerHero"
            tools:text="Full name: Mohammad Reza Fekri" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt_power_recyclerHero"
            style="@style/CoinBitText.BodyAlternate.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8x"
            android:layout_marginTop="@dimen/space_4x"
            app:layout_constraintStart_toEndOf="@+id/materialCardView"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_fullName_recyclerHero"
            tools:text="Power: power" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_txt_alignment_recyclerHero"
            style="@style/CoinBitText.BodyAlternate.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8x"
            android:layout_marginTop="@dimen/space_4x"
            app:layout_constraintStart_toEndOf="@+id/materialCardView"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_power_recyclerHero"
            tools:text="Alignment: Good" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>