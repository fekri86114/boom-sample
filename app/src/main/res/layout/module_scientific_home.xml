<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_marginStart="@dimen/space_4x"
    android:layout_marginEnd="@dimen/space_4x"
    app:cardCornerRadius="@dimen/space_8x"
    android:elevation="0dp"
    app:strokeWidth="@dimen/space_2x"
    android:id="@+id/mat_card_scientific"
    app:strokeColor="@color/yellow_back">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_scientific_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/img_scientific" />

</com.google.android.material.card.MaterialCardView>